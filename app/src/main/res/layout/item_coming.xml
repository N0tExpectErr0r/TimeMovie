<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16sp"
        android:paddingBottom="16dp">
        <ImageView
            android:id="@+id/coming_iv_img"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/coming_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="掠食城市"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/coming_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="动作 / 冒险 / 奇幻"
                android:maxLines="2"
                android:textSize="13sp"
                android:textColor="#484848"
                android:textStyle=""/>
            <TextView
                android:id="@+id/coming_tv_director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="导演：克里斯蒂安·瑞沃斯"/>
            <TextView
                android:id="@+id/coming_tv_actors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:textSize="12sp"
                android:text="主演：海拉·希尔莫 / 罗伯特·席安"/>
            <TextView
                android:id="@+id/coming_tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:textSize="12sp"
                android:text="1月18日上映"/>
        </LinearLayout>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/coming_tv_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="5dp"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape_tv_tag"
                android:text="预告片"/>
            <TextView
                android:id="@+id/coming_tv_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:maxLines="3"
                android:textSize="12sp"
                android:layout_above="@id/coming_btn_want"
                android:textColor="@color/colorPrimary"
                android:text="1093人想看"/>
            <Button
                android:id="@+id/coming_btn_want"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button_want"
                android:layout_centerInParent="true"
                android:textColor="#0AC282"
                android:layout_gravity="center"
                android:text="想看"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DDDDDD"/>
</LinearLayout>
