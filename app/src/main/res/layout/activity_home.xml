<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hjq.bar.TitleBar
        android:id="@+id/home_tb_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:leftTitle="广州"
        app:leftIcon="@drawable/ic_city"
        app:backButton="false"
        app:title="@string/app_name"/>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/home_tl_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="3dp"
        app:tl_indicator_corner_radius="5dp"
        app:tl_textBold="SELECT"
        app:tl_textsize="14sp"
        app:tl_textSelectColor="@color/tab_select_color"
        app:tl_textUnselectColor="@color/tab_unselect_color">
    </com.flyco.tablayout.CommonTabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/home_vp_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>